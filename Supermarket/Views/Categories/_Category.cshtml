@model Category

@{
	string action = ViewBag.Action ?? string.Empty;
}



<form method="post" asp-controller="categories" asp-action="@action">

	@if(action == "edit")
	{
		<input type="hidden" asp-for="CategoryId" /> @* this categoryId belongs to @model Category *@
	}

	<div class="text-danger" asp-validation-summary="All"></div>

	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Name" class="col-form-label"></label>
		</div>

		<div class="col-6">
			<input type="text" asp-for="Name" class="form-control" />
		</div>

		<div class="col">
			<span class="text-danger" asp-validation-for="Name"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Description" class="col-form-label"></label>
		</div>

		<div class="col-6">
			<input type="text" asp-for="Description" class="form-control" />
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-2">
			@if (action == "edit")
			{
				<input type="submit" class="btn btn-primary" value="Save" />
			}else{
				<input type="submit" class="btn btn-primary" value="Submit" />
			}
		</div>

		<div class="col-6">
		</div>
	</div>

</form>